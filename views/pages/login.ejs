<div class="flex items-center justify-center min-h-screen bg-gray-100 px-4">
  <div class="bg-white rounded-xl shadow-lg w-full max-w-md p-8">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-2">Login</h2>
    <p class="text-center text-gray-600 mb-6">Access your account</p>
    <form action="/users/login" method="POST" class="space-y-6">
      <div>
        <label for="email" class="block text-gray-700 font-semibold mb-1">Email</label>
        <input type="email" id="email" name="email" required placeholder="Enter your email" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-500 focus:outline-none" />
      </div>
      <div>
        <label for="password" class="block text-gray-700 font-semibold mb-1">Password</label>
        <input type="password" id="password" name="password" required placeholder="Enter your password" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-500 focus:outline-none" />
      </div>
      <button type="submit" class="w-full py-3 font-semibold text-white rounded-lg bg-gradient-to-r from-rose-500 to-rose-700 hover:scale-105 transition-transform duration-200">Login</button>
    </form>
    <p class="text-center text-sm text-gray-700 mt-5">
      Donâ€™t have an account?
      <a href="/users/register" class="text-rose-600 hover:underline font-medium">Sign Up</a>
    </p>
  </div>
</div>

<% if (notify) { %>
    <script>
      Swal.fire({
        text: "<%- notify %>",
        icon: "info",
        confirmButtonColor: "#ec4899"
      });
    </script>
<% } %>
