<!-- Contact Us Section -->
<section id="contact-us" class="bg-gray-100 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-gray-800 mb-8 font-heading text-center">Contact Us</h2>
    
    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Contact Form -->
      <div class="w-full lg:w-1/2 bg-white p-6 rounded-xl shadow-lg">
        <h3 class="text-xl font-semibold text-gray-800 mb-4 font-heading">Get in Touch</h3>
        <p class="text-gray-600 mb-6">Fill in the details below and our team will get back to you shortly.</p>
        
        <div class="space-y-4">
          <form action="/contactUs/submit" method="POST">
            <div>
              <label for="name" class="block text-gray-700 font-medium mb-1">Name</label>
              <input type="text" id="name" name="name" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-600 mb-3" placeholder="Your Name" />
            </div>
            
            <div>
              <label for="email" class="block text-gray-700 font-medium mb-1">Email</label>
              <input type="email" id="email" name="email" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-600 mb-3" placeholder="Your Email" />
            </div>
            
            <div>
              <label for="subject" class="block text-gray-700 font-medium mb-1">Subject</label>
              <select id="subject" name="subject" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-600 mb-3">
                <option value="Report a Technical Issue">Report a Technical Issue</option>
                <option value="General Feedback">General Feedback</option>
                <option value="Collaboration/Partnership Inquiry">Collaboration/Partnership Inquiry</option>
                <option value="Sponsorship Opportunities">Sponsorship Opportunities</option>
                <option value="Mail From Event CMS Project!">Other</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-gray-700 font-medium mb-1">Message</label>
              <textarea id="message" name="message" rows="4" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-600 mb-3" placeholder="Your Message"></textarea>
            </div>
            
            <button type="submit" class="w-full py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors">
              Submit
            </button>
          </form>
        </div>
      </div>
      
      <!-- Contact Information -->
      <div class="w-full lg:w-1/2 bg-white p-6 rounded-xl shadow-lg">
        <h3 class="text-xl font-semibold text-gray-800 mb-4 font-heading">Developer's Contact Info</h3>
        <p class="text-gray-600 mb-6">Have questions? Hereâ€™s how you can contact us directly.</p>
        
        <div class="space-y-6">
          <div class="flex items-start">
            <i class="fas fa-map-marker-alt text-red-600 mt-1 mr-3"></i>
            <div>
              <h4 class="text-gray-800 font-semibold">Address</h4>
              <p class="text-gray-600">Lake Town, Bangur Avenue, Kolkata, West Bengal, India - 700055</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <i class="fas fa-phone-alt text-red-600 mt-1 mr-3"></i>
            <div>
              <h4 class="text-gray-800 font-semibold">Phone</h4>
              <p class="text-gray-600">+91 9073525312 (Mon-Fri, 10:00 AM - 5:00 PM IST)</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <i class="fas fa-envelope text-red-600 mt-1 mr-3"></i>
            <div>
              <h4 class="text-gray-800 font-semibold">Email</h4>
              <p class="text-gray-600">sonettjsaha@gmail.com</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <i class="fas fa-clock text-red-600 mt-1 mr-3"></i>
            <div>
              <h4 class="text-gray-800 font-semibold">Support Hours</h4>
              <p class="text-gray-600">Monday - Friday: 10:00 AM - 5:00 PM IST</p>
              <p class="text-gray-600">Saturday: 10:00 AM - 1:00 PM IST</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<% if (notify) { %>
  <script>
    Swal.fire({
      text: "<%- notify %>",
      icon: "info",
      confirmButtonColor: "#ec4899"
    });
  </script>
<% } %>