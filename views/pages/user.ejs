<div class="bg-gray-100 text-gray-800 min-h-screen flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-lg p-8 max-w-md w-full">
        <h1 class="text-2xl font-bold mb-6 text-center text-blue-600">Your Profile</h1>
        <% if (user) { %>
            <div class="space-y-3">
                <p><span class="font-semibold">Account ID:</span> <%= user.id %></p>
                <p><span class="font-semibold">First Name:</span> <%= user.first_name %></p>
                <p><span class="font-semibold">Last Name:</span> <%= user.last_name %></p>
                <p><span class="font-semibold">Username:</span> <%= user.username %></p>
                <p>
                    <span class="font-semibold">Password:</span>
                    <input type="password" value="<%= user.password %>" disabled
                    class="ml-2 bg-gray-100 border border-gray-300 text-gray-800 rounded px-2 py-1 w-auto" />
                </p>
                <p><span class="font-semibold">Email:</span> <%= user.email %></p>
                <p><span class="font-semibold">Status:</span> 
                    <span class="<%= user.status ? 'text-green-600' : 'text-red-600' %>">
                        <%= user.status ? 'Active' : 'Inactive' %>
                    </span>
                </p>
                <p><span class="font-semibold">Organizing Committee:</span> <%= name %></p>
                <p><span class="font-semibold">Role:</span> <%= role %></p>
                <p><span class="font-semibold">Email Verified At:</span> <%= user.email_verified_at %></p>
            </div>

            <div class="mt-6 flex justify-between">
                <form action="/users/delete/<%= user.id %>" method="POST">
                    <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">Delete</button>
                </form>
                <form action="/users/logout" method="POST">
                    <button type="submit" class="bg-gray-700 text-white px-4 py-2 rounded hover:bg-gray-800">Logout</button>
                </form>
            </div>
        <% } else { %>
            <p class="text-center text-red-500 font-semibold">User not found!</p>
        <% } %>
    </div>
</div>
