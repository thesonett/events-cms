<!-- Dashboard Content -->
<div id="dashboard-home">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
    <div class="bg-white p-6 rounded-lg shadow">
      <h3 class="text-lg font-semibold text-gray-700">Total Events</h3>
      <p class="text-3xl font-bold text-gray-900"><%= events.length %></p>
    </div>
    <div class="bg-white p-6 rounded-lg shadow">
      <h3 class="text-lg font-semibold text-gray-700">Active Users</h3>
      <p class="text-3xl font-bold text-gray-900"><%= activeUsers.length %></p>
    </div>
    <div class="bg-white p-6 rounded-lg shadow">
      <h3 class="text-lg font-semibold text-gray-700">Total Upcoming Events</h3>
      <p class="text-3xl font-bold text-gray-900">test</p>
    </div>
  </div>

  <div class="bg-white p-6 rounded-lg shadow">
    <h3 class="text-lg font-semibold text-gray-700 mb-4">Recent Activity</h3>
    <div class="overflow-x-auto">
      <table class="w-full text-left">
        <thead>
          <tr class="text-gray-600">
            <th class="p-3">Action ID</th>
            <th class="p-3">Actions</th>
            <th class="p-3">Actions Performed On</th>
          </tr>
        </thead>
        <tbody>
        <% if (activities && activities.length) { %>
        <% activities.forEach(activity => { %>
          <tr class="border-t">
            <td class="p-3"><%= activity.id || 'No actions performed yet' %></td>
            <td class="p-3"><%= activity.actions || 'No actions performed yet' %></td>
            <td class="p-3"><%= activity.actionsPerformedOn || 'N/A' %></td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="2" class="p-3 text-center text-gray-500">No activity records available</td>
        </tr>
      <% } %>
      </tbody>
      </table>
    </div>
  </div>
</div>
